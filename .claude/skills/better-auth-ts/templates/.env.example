# Better Auth Configuration
# Copy this file to .env and fill in your actual values

# Required: Secret key for encryption and signing (min 32 characters)
# Generate using: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-min-32-characters

# Required: Base URL of your application
BETTER_AUTH_URL=http://localhost:3000

# Required: Database connection string
# PostgreSQL example:
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# MySQL example:
# DATABASE_URL=mysql://username:password@localhost:3306/database_name
# SQLite example:
# DATABASE_URL=file:./dev.db

# Optional: GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Optional: Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Optional: Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Optional: Email service configuration
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Optional: Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
