# Application Settings
ENVIRONMENT=development
APP_NAME=Todo Application API
DEBUG=1
VERSION=1.0.0

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - Neon PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/tododb

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Better Auth Configuration
BETTER_AUTH_SECRET=your-better-auth-jwt-secret-must-match-frontend
BETTER_AUTH_URL=http://localhost:3000/api/auth
